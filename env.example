# NeuroLearn Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgres://neurolearn:neurolearn_dev@localhost:5432/neurolearn
POSTGRES_DB=neurolearn
POSTGRES_USER=neurolearn
POSTGRES_PASSWORD=neurolearn_dev

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Authentication & Security
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRY=7d
ENCRYPTION_KEY=your-32-character-encryption-key
BCRYPT_ROUNDS=12

# API URLs (Development)
AUTH_SERVICE_URL=http://localhost:3001
LEARNING_ENGINE_URL=http://localhost:3002
CONTENT_SERVICE_URL=http://localhost:3003
ANALYTICS_SERVICE_URL=http://localhost:3004
AI_ADAPTATION_URL=http://localhost:8001
BEHAVIOR_ANALYSIS_URL=http://localhost:8002
CONTENT_GENERATION_URL=http://localhost:8003

# Frontend URLs
STUDENT_APP_URL=http://localhost:3000
PARENT_DASHBOARD_URL=http://localhost:3100
EDUCATOR_PORTAL_URL=http://localhost:3200

# COPPA/FERPA Compliance
PARENTAL_CONSENT_REQUIRED=true
DATA_RETENTION_DAYS_DEFAULT=90
EDUCATIONAL_RECORDS_RETENTION_DAYS=2555  # 7 years
AUDIT_LOG_RETENTION_DAYS=1095  # 3 years

# Email Service (for notifications and verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@neurolearn.edu
SMTP_PASSWORD=your-email-password
FROM_EMAIL=NeuroLearn <noreply@neurolearn.edu>

# File Storage (for learning content)
STORAGE_TYPE=local  # local, s3, gcs
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=neurolearn-content

# AI/ML Configuration
MODEL_PATH=/app/models
OPENAI_API_KEY=your-openai-api-key  # For content generation
HUGGING_FACE_API_KEY=your-hf-key    # For open-source models
ML_MODEL_VERSION=v1.0
ENABLE_AI_ADAPTATIONS=true

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_AUDIT_LOGGING=true
SENTRY_DSN=your-sentry-dsn
ENABLE_PERFORMANCE_MONITORING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS_STUDENT=1000
RATE_LIMIT_MAX_REQUESTS_PARENT=500
RATE_LIMIT_MAX_REQUESTS_TEACHER=5000
RATE_LIMIT_MAX_REQUESTS_THERAPIST=2000

# Session Management
SESSION_SECRET=your-session-secret
SESSION_TIMEOUT_MINUTES_STUDENT=60
SESSION_TIMEOUT_MINUTES_PARENT=120
SESSION_TIMEOUT_MINUTES_TEACHER=240
SESSION_TIMEOUT_MINUTES_THERAPIST=120

# Content Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3100,http://localhost:3200
ENABLE_CORS=true
ENABLE_CSRF_PROTECTION=true

# Accessibility Settings
DEFAULT_BRIGHTNESS=0.8
DEFAULT_VOLUME=0.6
ENABLE_REDUCED_MOTION=false
DEFAULT_FONT_SIZE=16
HIGH_CONTRAST_MODE=false

# Feature Flags
ENABLE_BETA_FEATURES=false
ENABLE_EMOTIONAL_TRACKING=true
ENABLE_BEHAVIOR_ANALYSIS=true
ENABLE_CONTENT_GENERATION=true
ENABLE_REAL_TIME_ADAPTATIONS=true

# Development Settings
NODE_ENV=development
DEBUG=neurolearn:*
ENABLE_SWAGGER_DOCS=true
ENABLE_GRAPHQL_PLAYGROUND=true

# Testing
TEST_DATABASE_URL=postgres://neurolearn:neurolearn_test@localhost:5432/neurolearn_test
ENABLE_TEST_ROUTES=true

# Compliance & Privacy
PRIVACY_POLICY_VERSION=1.0
TERMS_OF_SERVICE_VERSION=1.0
COOKIE_CONSENT_REQUIRED=true
GDPR_COMPLIANCE_MODE=false  # Set to true for EU users
